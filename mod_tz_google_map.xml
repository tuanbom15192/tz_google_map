    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <authorEmail>info@templaza.com</authorEmail>
    <authorUrl>http://www.TemPlaza.com</authorUrl>
    <version>1.0</version>
    <description>MOD_TZ_GOOGLE_MAP_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_tz_google_map">mod_tz_google_map.php</filename>
        <filename>index.html</filename>
        <filename>mod_tz_google_map.xml</filename>
        <folder>tmpl</folder>
    </files>
    <languages folder="languages">
        <language tag="en-GB">en-GB/en-GB.mod_tz_google_map.ini</language>
